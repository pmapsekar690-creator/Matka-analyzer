    <script>
        let numberCounts = {};
        let detectedBets = [];
        let currentMode = 'manual';
        let selectedFiles = [];
        
        function initializeCounts() {
            numberCounts = {};
            for (let i = 0; i < 100; i++) {
                numberCounts[i.toString().padStart(2, '0')] = 0;
            }
            detectedBets = [];
        }
        
        function setMode(mode) {
            currentMode = mode;
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('manualSection').style.display = mode === 'manual' ? 'block' : 'none';
            document.getElementById('photoSection').style.display = mode === 'photo' ? 'block' : 'none';
        }
        
        // Photo Upload Handlers
        document.getElementById('uploadArea').addEventListener('click', () => {
            document.getElementById('fileInput').click();
        });
        
        document.getElementById('fileInput').addEventListener('change', function(e) {
            selectedFiles = Array.from(this.files);
            const previews = document.getElementById('imagePreviews');
            previews.innerHTML = '';
            
            selectedFiles.forEach(file => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'image-preview';
                    previews.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
            
            document.getElementById('analyzePhotosBtn').disabled = selectedFiles.length === 0;
            
            if (selectedFiles.length > 0) {
                document.getElementById('uploadArea').innerHTML = `
                    <div style="font-size: 48px; margin-bottom: 10px;">‚úÖ</div>
                    <h3>${selectedFiles.length} photo(s) selected</h3>
                    <p>Tap "Extract from Photos" below</p>
                `;
            }
        });
        
        function analyzePhotos() {
            if (selectedFiles.length === 0) {
                alert('Please select photos first!');
                return;
            }
            
            // Show analysis options for photos
            const analysisType = prompt(`What type of analysis do you want from the photos?
            
Choose number:
1. Number/Bracket only (45-)
2. Open only (4x)
3. Close only (x4) 
4. Open to Close only (x4x)
5. Open Patti/Pana only (125x)
6. Close Patti/Pana only (x125)
7. Open to Close Patti/Pana only (x125x)
8. ALL TYPES (Complete analysis)

Enter number (1-8):`);

            if (analysisType) {
                analyzeWithType(parseInt(analysisType));
            }
        }
        
        function analyzeWithType(type) {
            initializeCounts();
            
            // Simulate photo analysis based on selected type
            let simulatedText = '';
            
            switch(type) {
                case 1: // Number/Bracket only
                    simulatedText = "45-10‚Çπ\n65-\n(120)";
                    break;
                case 2: // Open only
                    simulatedText = "4x\n5x\n6x";
                    break;
                case 3: // Close only
                    simulatedText = "x4\nx5\nx6";
                    break;
                case 4: // Open to Close only
                    simulatedText = "x4x\nx5x\nx6x";
                    break;
                case 5: // Open Patti only
                    simulatedText = "125x\n256x\n389x";
                    break;
                case 6: // Close Patti only
                    simulatedText = "x125\nx256\nx389";
                    break;
                case 7: // Open to Close Patti only
                    simulatedText = "x125x\nx256x\nx389x";
                    break;
                case 8: // ALL TYPES
                default:
                    simulatedText = "45-10‚Çπ\n4x\nx5\nx6x\n125x\nx256\nx389x\n(120)";
                    break;
            }
            
            document.getElementById('slipInput').value = `[Extracted from Photos - Type ${type}]\n` + simulatedText;
            analyzeBetTypes(simulatedText);
            displayResults();
        }
        
        function analyzeSlip() {
            initializeCounts();
            const slipText = document.getElementById('slipInput').value;
            
            if (!slipText.trim()) {
                alert('Please enter slip content!');
                return;
            }
            
            analyzeBetTypes(slipText);
            displayResults();
        }
        
        function analyzeBetTypes(text) {
            const lines = text.split('\n');
            let currentAmount = null;
            
            lines.forEach(line => {
                line = line.trim();
                if (!line || line.startsWith('[')) return;
                
                // Detect amount bets: 45-10‚Çπ, 45-10, 45-10rs, etc.
                const amountBet = line.match(/(\d{1,2})-(\d+)(‚Çπ|rs|RS|Rs)?/);
                if (amountBet) {
                    const number = amountBet[1].padStart(2, '0');
                    const amount = amountBet[2];
                    currentAmount = amount;
                    numberCounts[number]++;
                    detectedBets.push({
                        type: 'Number/Amount',
                        number: number,
                        amount: '‚Çπ' + amount,
                        raw: line
                    });
                    return;
                }
                
                // Detect cascade amounts: 45-, 65-, etc.
                const cascadeBet = line.match(/(\d{1,2})-/);
                if (cascadeBet && currentAmount !== null) {
                    const number = cascadeBet[1].padStart(2, '0');
                    numberCounts[number]++;
                    detectedBets.push({
                        type: 'Cascade',
                        number: number,
                        amount: '‚Çπ' + currentAmount,
                        raw: line
                    });
                    return;
                }
                
                // Detect Open: 4x, 5x, etc.
                const openBet = line.match(/(\d)x$/);
                if (openBet) {
                    const number = openBet[1].padStart(2, '0');
                    numberCounts[number]++;
                    detectedBets.push({
                        type: 'Open',
                        number: number,
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect Close: x4, x5, etc.
                const closeBet = line.match(/^x(\d)/);
                if (closeBet) {
                    const number = closeBet[1].padStart(2, '0');
                    numberCounts[number]++;
                    detectedBets.push({
                        type: 'Close',
                        number: number,
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect Open to Close: x4x, x5x, etc.
                const openCloseBet = line.match(/^x(\d)x$/);
                if (openCloseBet) {
                    const number = openCloseBet[1].padStart(2, '0');
                    numberCounts[number]++;
                    detectedBets.push({
                        type: 'Open to Close',
                        number: number,
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect Open Patti: 125x, 256x, etc.
                const openPatti = line.match(/(\d{3})x$/);
                if (openPatti) {
                    detectedBets.push({
                        type: 'Open Patti',
                        number: openPatti[1],
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect Close Patti: x125, x256, etc.
                const closePatti = line.match(/^x(\d{3})/);
                if (closePatti) {
                    detectedBets.push({
                        type: 'Close Patti',
                        number: closePatti[1],
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect Open to Close Patti: x125x, x256x, etc.
                const openClosePatti = line.match(/^x(\d{3})x$/);
                if (openClosePatti) {
                    detectedBets.push({
                        type: 'Open-Close Patti',
                        number: openClosePatti[1],
                        amount: 'N/A',
                        raw: line
                    });
                    return;
                }
                
                // Detect single numbers
                const singleNumbers = line.match(/\b\d{1,2}\b/g);
                if (singleNumbers) {
                    singleNumbers.forEach(num => {
                        const paddedNum = num.padStart(2, '0');
                        numberCounts[paddedNum]++;
                        detectedBets.push({
                            type: 'Single Number',
                            number: paddedNum,
                            amount: 'Unknown',
                            raw: num
                        });
                    });
                }
                
                // Detect total amount in brackets: (120), (1500), etc.
                const totalAmount = line.match(/\((\d+)\)/);
                if (totalAmount) {
                    detectedBets.push({
                        type: 'Total Amount',
                        number: 'N/A',
                        amount
